<Window x:Class="Projekat___HCI.Logovanje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat___HCI"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid>

        <Border CornerRadius="25" Grid.ColumnSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="Login2.jpg"
                        Stretch="Fill"/>
            </Border.Background>

            <Border CornerRadius="20"
                BorderThickness="3"
                Opacity="1.0">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1, 1">
                        <GradientStop Color="White" Offset="0" />
                        <GradientStop Color="White" Offset="0.75" />
                        <GradientStop Color="White" Offset="1" />
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="17*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>


                        <TextBlock Text="Prijava"
                               Foreground="White"
                               FontSize="15"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="15 5 0 0"/>

                        <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Margin="0 3 5 0"
                            Foreground="Red"
                            FontSize="18"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                            
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Blue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Margin="0 3 5 0"
                            Foreground="Red"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Blue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <StackPanel Width="400"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0 5 0 0">
                        <Image Source="Bayernlogo.png"
                           Width="270" Height="135" Stretch="Uniform" />


                        <TextBlock Text="Korisničko ime:"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               Margin="0 65 0 0"/>
                        <TextBox x:Name="textBoxIme"
                             FontSize="18"
                             FontWeight="Bold"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0 0 0 1"
                             Height="35"
                             VerticalContentAlignment="Center"
                             Margin="0 5 50 0"
                             Padding="28 0 0 0">
                        </TextBox>
                        
                        <Label x:Name="labelImeGreska"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="BLack"
                             BorderBrush="Black"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0 5 0 0" />

                        <TextBlock Text="Šifra:"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               Margin="0 25 0 0"/>

                        <PasswordBox  x:Name="passwordBoxSifra"
                             FontSize="18"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0 0 0 1"
                             Height="35"
                             VerticalContentAlignment="Center"
                             Margin="0 5 50 0"
                             Padding="30 0 0 0">
                        </PasswordBox>

                        <Label x:Name="labelSifraGreska"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             BorderBrush="Black"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0 5 0 0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnPrijava"
                                    BorderThickness="0"
                                    Content="Prijava"
                                    Foreground="Red"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    Grid.Column="0"
                                    Click="btnPrijava_Click"
                                    Margin="0 20 50 0">


                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" >
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="White"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#278BEF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100" Height="30"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnIzlaz"
                                    BorderThickness="0"
                                    Content="Odjava"
                                    Foreground="Red"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    Grid.Column="1"
                                    Margin="0 20 10 0"
                                    Click="btnIzlaz_Click"
                                    >

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" >
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="White"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#278BEF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100" Height="30"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
